{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "node16",
    "target": "es2021",
    "moduleResolution": "node16",
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
