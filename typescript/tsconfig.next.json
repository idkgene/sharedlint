{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "display": "Next.js",
    "compilerOptions": {
      "plugins": [{ "name": "next" }], 
      "declaration": false, 
      "declarationMap": false,
      "incremental": true,
      "moduleResolution": "bundler", 
      "jsx": "preserve", 
      "lib": ["dom", "dom.iterable", "esnext"], 
      "module": "esnext",
      "noEmit": true, 
      "allowJs": true,
      "target": "ES2020"
    },
    "include": ["next-env.d.ts", "src"],
    "exclude": ["node_modules"]
  }
